<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_graph"
  app:startDestination="@id/nav_note">

  <fragment
    android:id="@+id/nav_recipe"
    android:label="@string/app_name"
    android:name="edu.cnm.deepdive.reciperetriever.controller.FavoriteRecipeFragment"
    tools:layout="@layout/fragment_recipe">

    <action
      android:id="@+id/open_note"
      app:destination="@id/nav_edit_note">

      <argument
        android:name="note_id"
        app:argType="long"
        android:defaultValue="0L"/>

    </action>

  </fragment>

  <dialog
    android:id="@+id/nav_favorite_recipe"
    android:name="edu.cnm.deepdive.reciperetriever.controller.FavoriteRecipeFragment"
    tools:layout="@layout/fragment_favorite_recipe">

    <argument
      android:name="note_id"
      app:argType="long"
      android:defaultValue="0L"/>

  </dialog>

</navigation>